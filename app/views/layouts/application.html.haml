!!!
%html
%head
  %title Hub | Your Lifes' Work!
  = stylesheet_link_tag "application", "data-turbo-track": "reload"
  = javascript_importmap_tags
  = csrf_meta_tags
  = csp_meta_tag

%body
  %header
    .heaer_inner
      = link_to "Hub", root_path, id: "logo"

      %nav
        - if user_signed_in?
          = link_to "Create Doc", new_doc_path
          = button_to "Sign Out", destroy_user_session_path, method: :delete, 'data-turbo-action': 'replace'
        
        - else
          = link_to "Log In", new_user_session_path 


  %p.notice= notice
  %p.alert= alert

  = yield
